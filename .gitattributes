# Auto detect text files and normalize line endings to LF
* text=auto

# JavaScript
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.jsonc text eol=lf

# Markup
*.md text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Config
*.yml text eol=lf
*.yaml text eol=lf
.env.example text eol=lf
.gitignore text eol=lf

# SQL
*.sql text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.otf binary
*.ttf binary
*.woff binary
*.woff2 binary

# Don't diff package-lock.json files
package-lock.json diff=json
